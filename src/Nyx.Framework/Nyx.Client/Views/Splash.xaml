<Window x:Class="Nyx.Client.Views.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyx.Client.Views"
        ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" AllowsTransparency="True" Background="{x:Null}"
        Title="Splash" Height="256" Width="512" SnapsToDevicePixels="True" ResizeMode="NoResize">
    <Window.Resources>
        <SolidColorBrush x:Key="NyxColor" Color="Teal" />
    </Window.Resources>
    <Grid>
        <Image Source="/Styles/splashscreen.png">
            <Image.Effect>
                <DropShadowEffect Opacity="0.5"/>
            </Image.Effect>
        </Image>
    </Grid>
</Window>
